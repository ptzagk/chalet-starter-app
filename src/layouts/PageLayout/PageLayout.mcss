ul , li {
  list-style: none;
  margin: 0;
  padding: 0;
}

.title {
  color: #fff;
  font-size: 40px;
  padding: 10px 20px;
}

.item {
  color: black;
  text-align: center;
  text-decoration: none;
  padding: 15px;
  border: 1px solid black;
  width: 100px;
  font-size: 20px;
  &:hover{
    filter: blur(1px);
  }
}

.nav {
  background: deepskyblue;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
}
